@model IEnumerable<ClientSide_DrinkingWoteApp.Models.User>
@{
    ViewData["Title"] = "User Page";
}

<style>
    #sideBar_User {
        color: var(--primary);
        background: var(--dark);
        border-color: var(--primary);
    }
</style>
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded h-100 p-4">
        <h4 class="mb-3">List Of User</h4>
        <button type="button" class="btn btn-outline-primary mb-4" onclick="window.location.href='@Url.Action("SignUp", "User")'"><i class="fa fa-user-plus me-2"></i>Add User</button>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"><input class="form-check-input" type="checkbox"></th>
                        <th scope="col">User ID</th>
                        <th scope="col">UserName</th>
                        <th scope="col">Password</th>
                        <th scope="col">Consument Name</th>
                        <th scope="col">Mobile Phone</th>
                        <th scope="col">BirthDay</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input class="form-check-input" type="checkbox"></td>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.User_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Consument.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.MobilePhone)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.BirthTime)
                            </td>
                            <td><a class="btn btn-sm btn-primary" href="">Detail</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
